{
    "name": "@privateaim/server-kit",
    "type": "module",
    "version": "0.8.23",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "exports": {
        "./package.json": "./package.json",
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.mjs",
            "require": "./dist/index.cjs"
        }
    },
    "author": {
        "name": "Peter Placzek",
        "email": "contact@tada5hi.net",
        "url": "https://tada5hi.net"
    },
    "license": "Apache-2.0",
    "description": "This package contains common constants, functions, types, ... for the server side.",
    "scripts": {
        "build:types": "tsc --emitDeclarationOnly -p tsconfig.build.json",
        "build:js": "rollup -c",
        "build": "rimraf ./dist && cross-env NODE_ENV=production npm run build:js && npm run build:types",
        "test": "cross-env NODE_ENV=test vitest run --config test/vitest.config.ts",
        "test:coverage": "cross-env NODE_ENV=test vitest run --config test/vitest.config.ts --coverage"
    },
    "dependencies": {
        "@ebec/http": "^2.3.0",
        "@isaacs/ttlcache": "^2.1.4",
        "@privateaim/kit": "^0.8.23",
        "@socket.io/redis-emitter": "^5.1.0",
        "envix": "^1.5.0",
        "hapic": "^2.7.0",
        "singa": "^1.1.0",
        "triple-beam": "^1.4.1",
        "winston": "^3.19.0",
        "winston-transport": "^4.9.0"
    },
    "devDependencies": {
        "@authup/core-http-kit": "^1.0.0-beta.28",
        "@hapic/vault": "^2.3.9",
        "amqp-extension": "^4.0.0",
        "redis-extension": "^2.0.4",
        "typeorm-extension": "^3.7.4",
        "vitest": "^4.0.18"
    },
    "peerDependencies": {
        "@authup/core-http-kit": "^1.0.0-beta.28",
        "@hapic/vault": "^2.3.9",
        "amqp-extension": "^4.0.0",
        "redis-extension": "^2.0.4",
        "typeorm-extension": "^3.7.4"
    },
    "publishConfig": {
        "access": "public"
    }
}
