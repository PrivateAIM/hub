{
    "name": "@privateaim/server-kit",
    "version": "0.8.0",
    "exports": {
        "./package.json": "./package.json",
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.mjs",
            "require": "./dist/index.cjs"
        }
    },
    "main": "./dist/index.cjs",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "author": {
        "name": "Peter Placzek",
        "email": "contact@tada5hi.net",
        "url": "https://tada5hi.net"
    },
    "license": "Apache-2.0",
    "description": "This package contains common constants, functions, types, ... for the server side.",
    "scripts": {
        "build:types": "tsc --emitDeclarationOnly -p tsconfig.build.json",
        "build:js": "rollup -c",
        "build": "rimraf ./dist && cross-env NODE_ENV=production npm run build:js && npm run build:types",
        "test": "cross-env NODE_ENV=test jest --config ./test/jest.config.js",
        "test:coverage": "npm run test -- --coverage"
    },
    "dependencies": {
        "@ebec/http": "^2.3.0",
        "@isaacs/ttlcache": "^1.4.1",
        "@privateaim/core-kit": "^0.8.0",
        "@privateaim/kit": "^0.8.0",
        "@socket.io/redis-emitter": "^5.1.0",
        "envix": "^1.5.0",
        "hapic": "^2.5.1",
        "singa": "^1.0.0",
        "winston": "^3.14.1"
    },
    "devDependencies": {
        "@authup/core-http-kit": "^1.0.0-beta.19",
        "@hapic/vault": "^2.3.4",
        "amqp-extension": "^4.0.0-beta.3",
        "redis-extension": "^1.5.0",
        "typeorm-extension": "^3.6.0"
    },
    "peerDependencies": {
        "@authup/core-http-kit": "^1.0.0-beta.19",
        "@hapic/vault": "^2.3.4",
        "amqp-extension": "^4.0.0-beta.3",
        "redis-extension": "^1.5.0",
        "typeorm-extension": "^3.6.0"
    },
    "publishConfig": {
        "access": "public"
    }
}
